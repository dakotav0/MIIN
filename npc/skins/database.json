  "selection_logic": {
    "description": "How to match skins to generated NPCs",
    "steps": [
      "1. LLM generates NPC with archetype_id and unique_trait",
      "2. Extract keywords from unique_trait (e.g., 'obsessed with emeralds' â†’ ['wealthy', 'greedy', 'emeralds'])",
      "3. Query skins where role matches archetype AND vibe matches keywords",
      "4. If multiple matches, prioritize by palette match (optional)",
      "5. Return filename for NPC to use"
    ],
    "example": {
      "input": {
        "archetype_id": "merchant",
        "unique_trait": "Obsessed with emeralds, hates haggling"
      },
      "keywords": ["wealthy", "greedy", "emeralds"],
      "query": "role=merchant AND vibe IN [wealthy, greedy]",
      "result": "merchant_wealthy_01.png"
    }
  }
